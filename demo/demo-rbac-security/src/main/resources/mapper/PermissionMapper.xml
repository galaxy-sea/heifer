<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.xkcoding.rbac.security.repository.PermissionDao">
  <!-- 通用查询映射结果 -->
  <resultMap id="BaseResultMap" type="com.xkcoding.rbac.security.model.Permission">
    <id column="id" property="id"/>
    <result column="name" property="name"/>
    <result column="url" property="url"/>
    <result column="type" property="type"/>
    <result column="permission" property="permission"/>
    <result column="method" property="method"/>
    <result column="sort" property="sort"/>
    <result column="parent_id" property="parentId"/>
  </resultMap>

  <!-- 通用查询结果列 -->
  <sql id="Base_Column_List">
    id,
    name,
    url,
    type,
    permission,
    method,
    sort,
    parent_id
  </sql>

  <select id="selectByRoleIdList" resultMap="BaseResultMap">
    SELECT DISTINCT sec_permission.*
    FROM sec_permission,
         sec_role,
         sec_role_permission WHERE sec_role.id = sec_role_permission.role_id
                               AND sec_permission.id = sec_role_permission.permission_id
                               AND sec_role.id IN
    <foreach item="item" index="index" collection="ids" open="(" separator="," close=")">
      #{item}
    </foreach>
  </select>
</mapper>
