<mapper namespace="plus.wcj.heifer.plugin.rbac.dao.role.RbacRoleDao">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="plus.wcj.heifer.plugin.rbac.pojo.entity.role.RbacRole">
        <id column="id" property="id" />
        <result column="rbac_tenant_id" property="rbacTenantId" />
        <result column="name" property="name" />
        <result column="create_time" property="createTime" />
        <result column="create_by" property="createBy" />
        <result column="update_time" property="updateTime" />
        <result column="update_by" property="updateBy" />
    </resultMap>

    <!-- 通用查询结果列 -->
    <sql id="Base_Column_List">
        id, rbac_tenant_id, name, create_time, create_by, update_time, update_by
    </sql>

        <select id="selectByRbacTenantId" resultMap="BaseResultMap">
            SELECT
            <include refid="Base_Column_List"/>
            FROM rbac_role
            WHERE rbac_tenant_id = #{rbacTenantId}
        </select>

</mapper>
